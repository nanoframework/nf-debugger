<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:USB_Test_App_WPF"
        xmlns:ViewModel="clr-namespace:USB_Test_App_WPF.ViewModel" x:Class="USB_Test_App_WPF.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <DataTemplate x:Key="NanoDevicesItemTemplate">
            <TextBlock Text="{Binding Path=Description}"/>
        </DataTemplate>
    </Window.Resources>
    <Window.DataContext>
        <Binding Mode="OneWay" Path="Main" Source="{StaticResource Locator}"/>
    </Window.DataContext>

    <Grid>
        <Label Content="Available nanoFramework devices:" HorizontalAlignment="Left" Margin="39,46,0,0" VerticalAlignment="Top"/>
        <DataGrid HorizontalAlignment="Left" Height="100" Margin="39,77,0,0" VerticalAlignment="Top" Width="190" ItemsSource="{Binding AvailableDevices}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Description}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
