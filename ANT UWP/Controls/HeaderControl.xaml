                                 SelectionChanged="AvailableTransportTypesListBox_SelectionChanged" ItemContainerStyle="{StaticResource FlyoutLisBoxItemStyle}"  />
                        </Flyout>
                    </Button.Flyout>
                </Button>
            </StackPanel>
        </ContentControl>
    </Grid>
</UserControl>
