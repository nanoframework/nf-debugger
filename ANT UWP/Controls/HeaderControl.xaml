                                                <LinearDoubleKeyFrame  KeyTime="0:0:1.5" Value="270"/>
                                                <LinearDoubleKeyFrame  KeyTime="0:0:2" Value="360"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
